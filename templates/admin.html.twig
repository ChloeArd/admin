{% extends "base.html.twig" %}

{% block title %} Utilisateurs{% endblock %}

{% block body %}
    <h1 class="center">Utilisateurs</h1>

    <main class="container col">

        <a id="btnAddUser" href="../../?controller=user&action=add" class="btn-floating btn-large waves-effect waves-light red #0091ea light-blue accent-4"><i class="fas fa-plus"></i></a>
        <table class="marg">
            <thead>
            <tr>
                <th class="center">Pseudo</th>
                <th class="center">Email</th>
                <th class="center"><i class="fas fa-user-edit"></i></th>
                <th class="center"><i class="fas fa-user-minus"></i></th>
            </tr>
            </thead>

            <tbody>

            {% for user in users %}
                <tr>
                    <td class="center">{{ user.pseudo }}</td>
                    <td class="center">{{ user.email }}</td>
                    <td class="center"><a id="btnUpdateUser" href="../../?controller=user&action=update&id={{ user.id }}" class="btn-floating btn-large waves-effect waves-light red #ffa000 amber darken-2"><i class="far fa-edit"></i></a></td>
                    <td class="center"><a id="btnDeleteUser" href="../../?controller=user&action=delete&id={{ user.id }}" class="btn-floating btn-large waves-effect waves-light red #ff3d00 deep-orange accent-3"><i class="far fa-trash-alt"></i></a></td>
                </tr>
            {% else %}
                <p>Il n'y a pas encore d'utilisateurs d'inscrits !</p>
            {% endfor %}

            </tbody>
        </table>
    </main>
{% endblock %}





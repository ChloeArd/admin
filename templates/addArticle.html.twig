{% extends "base.html.twig" %}

{% block title %} Ajouter un utilisateur {% endblock %}

{% block body %}

    <main class="container">

        <h1 class="center">Ajouter un article</h1>

        <div class="row">
            <form action="" method="post" class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="title" name="title" type="text" class="validate">
                        <label for="title">Titre</label>
                    </div>
                </div>
                <div class="file-field input-field">
                    <div class="btn #0091ea light-blue accent-4">
                        <span>File</span>
                        <input id="picture" name="picture" type="file" multiple>
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload one or more files">
                    </div>
                </div>
                <div class="input-field col s12">
                    <textarea id="content" name="content" class="materialize-textarea"></textarea>
                    <label for="content">Textarea</label>
                </div>

                <input id="addUser" class="waves-effect waves-light btn #0091ea light-blue accent-4 width_100" type="submit" value="Ajouter">

            </form>
        </div>
    </main>
{% endblock %}